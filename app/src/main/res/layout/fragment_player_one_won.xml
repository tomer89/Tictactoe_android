<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!--
        should put here "player one"
        -->

    </LinearLayout>

    <ImageButton
        android:id="@+id/newGamePlayerOneWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:src="@drawable/new_game_btn"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/topLayout"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/exitPlayerOneWon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:src="@drawable/exit_btn"
        android:layout_below="@+id/newGamePlayerOneWon"
        android:layout_alignStart="@+id/newGamePlayerOneWon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/topLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player two"
            android:paddingBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingEnd="20dp"
            android:paddingTop="0dp"
            android:id="@+id/textView2"
            android:textAlignment="gravity"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:text="@string/won"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:id="@+id/textView4"
            android:layout_above="@+id/topLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
